<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juangm.myscrumboard_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.juangm.myscrumboard_android.MainStages"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.juangm.myscrumboard_android.LoadingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.juangm.myscrumboard_android.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"/>
        <activity
            android:name="com.juangm.myscrumboard_android.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>